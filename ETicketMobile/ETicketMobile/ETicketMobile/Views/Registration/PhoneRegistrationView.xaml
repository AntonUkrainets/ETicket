<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com" 
    xmlns:bindingconverters="clr-namespace:ETicketMobile.UserInterface.BindingConverters;assembly=ETicketMobile.UserInterface"
    xmlns:local="clr-namespace:ETicketMobile.Localizations.Extensions;assembly=ETicketMobile" 
    xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
    prism:ViewModelLocator.AutowireViewModel="True"
    Title="Phone"
    x:Class="ETicketMobile.Views.Registration.PhoneRegistrationView">

    <ContentPage.Resources>
        <ResourceDictionary>
            <bindingconverters:StringToColorConverter x:Key="StringToColorConverter"/>
            <bindingconverters:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.75*"/>
                <RowDefinition Height="0.75*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                VerticalTextAlignment="Start"
                Text="{local:Translate EnterPhone}"
                Style="{StaticResource TitleLabelStyle}"/>

            <Label
                Grid.Row="1"
                VerticalTextAlignment="Start"
                IsVisible="{Binding PhoneWarning, Converter={StaticResource StringToBooleanConverter}}"
                Text="{Binding PhoneWarning}"
                TextColor="{Binding PhoneWarning, Converter={StaticResource StringToColorConverter}}"
                Style="{StaticResource NormalLabelStyle}"/>

            <telerikInput:RadMaskedInput
                Grid.Row="2"
                x:Name="PhoneEntry"
                WatermarkText="{local:Translate Phone}"
                RejectedSymbolErrorText=""
                Placeholder="*"
                Mask="+380 (00)-000-00-00"
                MaskType="Text">
                <telerikInput:RadMaskedInput.BorderStyle>
                    <telerikInput:BorderStyle 
                        BorderColor="Gray" 
                        BorderThickness="3" 
                        CornerRadius="5"/>
                </telerikInput:RadMaskedInput.BorderStyle>
            </telerikInput:RadMaskedInput>

            <telerikInput:RadButton
                Grid.Row="3"
                Command="{Binding NavigateToNameRegistrationView}"
                CommandParameter="{Binding Source={x:Reference PhoneEntry}, Path=InputValue}"
                Text="{local:Translate Next}"
                Style="{StaticResource ActionButtonStyle}"/>
        </Grid>

    </ContentPage.Content>

</ContentPage>