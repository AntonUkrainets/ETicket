<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com" 
    xmlns:bindingconverters="clr-namespace:ETicketMobile.UserInterface.BindingConverters;assembly=ETicketMobile.UserInterface"
    xmlns:local="clr-namespace:ETicketMobile.Localizations.Extensions;assembly=ETicketMobile" 
    xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
    prism:ViewModelLocator.AutowireViewModel="True"
    Title="Reset password"
    x:Class="ETicketMobile.Views.ForgotPassword.CreateNewPasswordView">

    <ContentPage.Resources>
        <ResourceDictionary>
            <bindingconverters:StringToColorConverter x:Key="StringToColorConverter"/>
            <bindingconverters:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid Margin="10, 0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="2.2*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.85*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1.2*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Text="{local:Translate ChangePassword}"
                Style="{StaticResource TitleLabelStyle}"/>

            <Label
                Grid.Row="1"
                Text="{local:Translate CreateNewPassword}"
                Style="{StaticResource NormalLabelStyle}"/>

            <Label
                Grid.Row="2"
                Margin="0, 0, 0, 5"
                Text="{Binding PasswordWarning}"
                TextColor="{Binding PasswordWarning, Converter={StaticResource StringToColorConverter}}"
                Style="{StaticResource NormalLabelStyle}"/>

            <telerikInput:RadEntry
                Grid.Row="3"
                x:Name="PasswordEntry"
                Margin="0, -10, 0, 0"
                WatermarkText="{local:Translate PasswordPlaceHolderDefault}"
                Style="{StaticResource LoginEntryStyle}"
                IsPassword="True"/>

            <Label
                Grid.Row="4"
                IsVisible="{Binding ConfirmPasswordWarning, Converter={StaticResource StringToBooleanConverter}}"
                Text="{Binding ConfirmPasswordWarning}"
                TextColor="{Binding ConfirmPasswordWarning, Converter={StaticResource StringToColorConverter}}"
                Style="{StaticResource NormalLabelStyle}"/>

            <telerikInput:RadEntry
                Grid.Row="5"
                Text="{Binding ConfirmPassword, Mode=TwoWay}"
                WatermarkText="{local:Translate ConfirmPassword}"
                Style="{StaticResource LoginEntryStyle}"
                IsPassword="True"/>

            <telerikInput:RadButton
                Grid.Row="6"
                Command="{Binding NavigateToSignInView}"
                CommandParameter="{Binding Source={x:Reference PasswordEntry}, Path=Text}"
                Text="{local:Translate Change}"
                Style="{StaticResource ActionButtonStyle}"/>
        </Grid>

    </ContentPage.Content>

</ContentPage>