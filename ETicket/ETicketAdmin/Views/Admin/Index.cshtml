@model IEnumerable<IdentityUser>
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registered user table</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="EditRoles" asp-route-userid="@item.Id" class="btn btn-info">
                        <span class="text">Access rights</span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('You will delete this user permanently')">
                        <span class="text">Delete</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
